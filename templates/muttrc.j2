################################################################################

# Info
set realname = "{{ snapraid_mutt.realname }}"
set from = "{{ snapraid_mutt.email }}"
set use_from = yes

# Incoming mail settings
set imap_user = "{{ snapraid_mutt.email }}"
set imap_pass = "{{ snapraid_mutt.password }}"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record="+[GMail]/Sent Mail"
set postponed="+[GMail]/Drafts"
set trash="+[GMail]/Trash"

# Outgoing mail settings
set smtp_url = "smtps://{{ snapraid_mutt.email }}@smtp.gmail.com:465/"
set smtp_pass = "{{ snapraid_mutt.password }}"
set ssl_force_tls = yes

# Other settings
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

set move = no
set imap_keepalive = 900
set delete = yes

set sort=threads
set sort_aux=last-date-received
set imap_check_subscribed = yes
